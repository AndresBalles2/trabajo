---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const flags = [
	{ 
		flag: '', 
		name: 'Bandera 1' },
		{ 
		flag: '', 
		name: 'Bandera 2' },
		{ 
		flag: '', 
		name: 'Bandera 3' }
	]
---

<Layout title="HOLA">
	<div class="container">
		<div class="banner">
			Banner
		</div>
		<div class="languages">
			{
				flags.map( (flag) =>
				<a href="#">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="m14.303 6-3-2H6V2H4v20h2v-8h4.697l3 2H20V6z"></path></svg>
				{ flag.name }
				</a>
				)
			}	
		</div>
	</div>
</Layout>

<style>
	.languages{
		display: flex;
		height: 46px;

		& a{
			transition: background 300ms ease-in-out;
			background: purple;
			color: white;
			text-decoration: none;
			height: 100%;
			padding: 0 8px;
			display: flex;
			align-items: center;
		}

		& a:hover{
			background: green;
		}

	}

	.banner{
		height: 320px;
	}
</style>